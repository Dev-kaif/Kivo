generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  boardsOwned   Board[]       @relation("BoardOwner")
  boardsMember  BoardMember[]
  tasksAssigned Task[]        @relation("TaskAssignees")
  activities    ActivityLog[]
}

model Board {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownerId String
  owner   User   @relation("BoardOwner", fields: [ownerId], references: [id])

  lists        List[]
  members      BoardMember[]
  activities   ActivityLog[]
  boardInvites BoardInvite[]

  @@index([ownerId])
}

enum MemberRole {
  ADMIN
  MEMBER
  VIEWER
}

model BoardMember {
  id       String     @id @default(uuid())
  boardId  String
  userId   String
  role     MemberRole @default(MEMBER)
  joinedAt DateTime   @default(now())

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([boardId, userId])
  @@index([boardId])
  @@index([userId])
}

model List {
  id        String   @id @default(uuid())
  title     String
  position  Float    @default(0)
  boardId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([boardId])
  @@index([boardId, position])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  position    Float     @default(0)
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?

  listId String
  list   List   @relation(fields: [listId], references: [id], onDelete: Cascade)

  assignees  User[]        @relation("TaskAssignees")
  activities ActivityLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([listId])
  @@index([priority])
  @@index([listId, position])
}

enum ActivityAction {
  LIST_CREATED
  LIST_UPDATED
  LIST_DELETED

  TASK_CREATED
  TASK_UPDATED
  TASK_MOVED
  TASK_DELETED

  MEMBER_ADDED
  MEMBER_REMOVED
  ROLE_UPDATED

  BOARD_CREATED
  BOARD_UPDATED
  BOARD_DELETED
}

model ActivityLog {
  id      String         @id @default(uuid())
  action  ActivityAction
  details Json?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  taskId String?
  task   Task?   @relation(fields: [taskId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([boardId])
  @@index([taskId])
  @@index([userId])
  @@index([createdAt])
}

model BoardInvite {
  id        String   @id @default(uuid())
  boardId   String
  token     String   @unique
  expiresAt DateTime
  createdBy String
  createdAt DateTime @default(now())

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId])
}
